@article{刘金全;王勇;张鹤;2007,
number = {05},
author = {刘金全;王勇;张鹤;},
year = {2007},
journaltitle = {财经研究},
pages = {126-133+143},
title = {利率期限结构与宏观经济因素的动态相依性——基于VAR模型的经验研究},
issn = {1001-9952},
abstract = {利率期限结构的变化受到各种宏观经济冲击的影响,宏观经济冲击通过利率期限结构的变化影响到资产收益曲线。文章通过估计和检验结构VAR模型,发现货币冲击、供给冲击和价格冲击都对短期利率产生了持续显著的影响,而对长期利率则没有显著作用效果。宏观经济冲击只对收益曲线的截距参数具有显著影响,而对收益曲线的斜率参数和曲率参数的影响微弱。},
url = {http://kns.cnki.net/kcms/detail/detail.aspx?FileName=CJYJ200705011&amp;DbName=CJFQ2007},
}


@article{陈芳菲;沈长征;2006,
number = {04},
author = {陈芳菲;沈长征;},
year = {2006},
journaltitle = {统计与决策},
pages = {133-135},
title = {Nelson-Siegel模型与国债收益率曲线的预测},
issn = {1002-6487},
abstract = {本文使用Nelson-Siegel模型拟合我国国债收益率曲线,模型中的三个参数可被解释为水平因素、斜率因素和曲度因素,并提出和估计了这三因素的自回归模型,采用动态回归的方法,多种预测步长对收益率曲线进行预测,并与随机游走模型下的预测做比较。研究发现基于Nelson-Siegel模型的方法预测效果较随机游走模型好,利用该模型经过一天、30天、60天和90天的步长预测比较得出各种步长的预测结果较为接近,90天步长预测效果稍好。},
